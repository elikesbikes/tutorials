services:
  nginx_npm-app:
    hostname: nginxproxy-app-1
    container_name: npm-app
    image: 'jc21/nginx-proxy-manager:latest'
    restart: unless-stopped
    networks:
      frontend: 
    ports:
     #  - '80:80'
      - '82:81'
     # - '443:443'
    environment:
      DB_MYSQL_HOST: "nginxproxy-db-1"
      DB_MYSQL_PORT: 3306
      DB_MYSQL_USER: "npm"
      DB_MYSQL_PASSWORD: "npm"
      DB_MYSQL_NAME: "npm"
    volumes:
      - ./data:/data
      - ./letsencrypt:/etc/letsencrypt
  nginx_npm-db:
    image: 'jc21/mariadb-aria:latest'
    hostname: nginxproxy-db-1
    container_name: npm-db
    restart: unless-stopped
    networks:
      frontend: 
    environment:
      MYSQL_ROOT_PASSWORD: 'npm'
      MYSQL_DATABASE: 'npm'
      MYSQL_USER: 'npm'
      MYSQL_PASSWORD: 'npm'
    volumes:
      - ./mysql:/var/lib/mysql
networks:
  frontend:
    external: true
